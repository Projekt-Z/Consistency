@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <AuthorizeView>
            <NotAuthorized>
                <div class="top-row px-4">
                    <a href="/sign-in">Sign In</a>
                </div>
            </NotAuthorized>
            <Authorized>
                <div class="top-row px-4">
                    <DisplayUser></DisplayUser>
                    <LogoutUser></LogoutUser>
                </div>
            </Authorized>
        </AuthorizeView>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>